@{
  Layout = "_Layout";
}

@using Library.ViewModels

@model RegisterViewModel

<h2>Register a new user</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{ 
  <div class="form-group">
    @Html.TextBoxFor(user=> user.FullName, new{@class="form-control", @type="text", placeholder="Name"})
  </div>
  <div class="form-group">
    @Html.TextBoxFor(user=> user.Email, new{@class="form-control", @type="email", placeholder="Email"})
  </div>
  <div class="form-group">
    @Html.PasswordFor(user=> user.Password, new{@class="form-control", @type="password", placeholder="Password"})
  </div>
  <div class="form-group">
    @Html.PasswordFor(user=> user.ConfirmPassword, new{@class="form-control", @type="password", placeholder="Confirm Password"})
  </div>
    <button type="submit" class="btn btn-light">Submit</button>
}