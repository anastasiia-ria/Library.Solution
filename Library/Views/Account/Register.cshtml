@{
  Layout = "_Layout";
}

@using Library.ViewModels

@model RegisterViewModel

<h2>Register a new user</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.LabelFor(user => user.FullName)
    @Html.TextBoxFor(user=> user.FullName, new{@class="input"})

    @Html.LabelFor(user => user.Email)
    @Html.TextBoxFor(user=> user.Email, new{@class="input"})

    @Html.LabelFor(user=> user.Password)
    @Html.PasswordFor(user=> user.Password, new{@class="input"})

    @Html.LabelFor(user=> user.ConfirmPassword)
    @Html.PasswordFor(user=> user.ConfirmPassword, new{@class="input"})

    <input type="submit" class="button"  value="Register" />
}