@{
  Layout = "_Layout";
}

@using Library.ViewModels

@model LoginViewModel

<h2>Log in with your account</h2>
<hr />
@using (Html.BeginForm())
{ <div class="form-group">
    @Html.TextBoxFor(m => m.Email, new{@class="form-control", @type="text", placeholder="Email"})
  </div>
  <div class="form-group">
    @Html.PasswordFor(m => m.Password, new{@class="form-control", @type="password", placeholder="Password"})
  </div>
    <button type="submit" class="btn btn-light">Log in</button>
}