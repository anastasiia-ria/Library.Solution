@{
  Layout = "_Layout";
}

<h2>Account</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <h3>Hello @(User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value)!</h3>
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="button"  class="btn btn-default" value="Log out" />
    }
}
else
{
    <p class="button">@Html.ActionLink("Register", "Register")</p>
    <p class="button">@Html.ActionLink("Log in", "Login")</p>
}