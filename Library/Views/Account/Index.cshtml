@{
  Layout = "_Layout";
}


    @if (User.Identity.IsAuthenticated)
{ 
  <div class="container">
    <h3 class="mt-3">Hello @(User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value)!</h3>
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <button type="submit" class="btn btn-light logout">Log out</button>
    }
  </div>
}
else
{ 
  <div class="container account-container">
    <div class="row justify-content-around">
        <div class="col-4">
            @Html.Partial("Login.cshtml", new Library.ViewModels.LoginViewModel())
        </div>
        <div class="col-4">
            @Html.Partial("Register.cshtml", new Library.ViewModels.RegisterViewModel())
        </div>
    </div>
  </div>
}




