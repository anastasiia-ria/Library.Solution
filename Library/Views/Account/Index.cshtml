@{
  Layout = "_Layout";
}

<h2>Account</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <h3>Hello @(User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value)!</h3>
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <button type="submit" class="btn btn-light">Log out</button>
    }
}
else
{
    @Html.ActionLink("Register", "Register", null, null, new {@class="btn btn-light"})
    @Html.ActionLink("Log in", "Login", null, null, new {@class="btn btn-light"})
}