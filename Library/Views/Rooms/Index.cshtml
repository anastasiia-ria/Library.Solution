@{
  Layout = "_Layout";
}

@using Library.Models;

<h1>Rooms</h1>

@if (@Model.Count == 0)
{
  <h3>No rooms have been added yet!</h3>
} 

<ul>
  @foreach(Room room in Model)
  {
    <li>@Html.ActionLink($"{room.Name}", "Details", new { id = room.RoomId })</li>
  }
</ul>

@Html.ActionLink("Add room", "Create", null, null, new {@class="btn btn-light"})