@using Library.Models;
<div class="modal fade" id="addBookToRoom" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add Book</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" name="this-room">
        <input type="hidden" name="this-shelf">
        <div id="books-to-add" class="row books-row"></div>
        <div class="no-books">Congratulations! You have assign location to all your books!</div>
        <nav id="r-pagination" class="p-bottom mt-3">
          <ul class="pagination justify-content-center">
            <li class="page-item disabled">
              <a class="page-link" id="books-page-prev"><i class="fa fa-caret-left"></i></a>
            </li>
            <li class="page-item">
              <a class="page-link" id="books-page-next"><i class="fa fa-caret-right"></i></a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>