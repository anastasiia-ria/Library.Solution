@{
  Layout = "_Layout";
}

@model Library.Models.Shelf

<h4>Add a new shelf</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {required = "required" })

  @Html.LabelFor(model => model.Room)
  @Html.DropDownList("RoomId")

  <button type="submit" class="btn btn-light">Add shelf</button>
}
@Html.ActionLink("Back to Room", "Details", "Rooms", new { id = @ViewBag.RoomId}, new { @class="btn btn-light" })