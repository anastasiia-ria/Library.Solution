@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Shelf>;

<h1>Shelves</h1>

@if (@Model.Count == 0)
{
  <h3>No shelves have been added yet!</h3>
} 

@foreach (Shelf shelf in Model)
{
  <li>@Html.ActionLink($"{shelf.Name}", "Details", new { id = shelf.ShelfId }) | @shelf.Room.Name</li>
}

@if (@ViewBag.RoomCount > 0) {
  <p class="button">@Html.ActionLink("Add shelf", "Create")</p>
}