@model Library.Models.Book
<div class="modal fade" id="addBookFromApi" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Book</h5>
        <div class="search-title">
          <form>
            <div class="input-group mb-2">
              <input type="text" class="form-control" id="general" placeholder="Search" required>
              <div class="input-group-text">
                <button class="button-search" type="submit" id="search"><i class="fa fa-search"></i></button>
              </div>
            </div>
          </form>
          <p id="advanced-search">Advanced Search</p>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-header" id="advanced-search-form">
        <div class="advanced-search-inputs">
          <input class="form-control" type="text" id="title" placeholder="Title"> 
          <input class="form-control" type="text" id="authors" placeholder="Authors">
          <input class="form-control" type="text" id="piblisher" placeholder="Publisher"> 
          <input class="form-control" type="text" id="isbn" placeholder="ISBN"> 
          <button class="input-group-text button-search" type="submit"><i class="fa fa-search"></i></button>
        </div>
      </div>
      <div class="modal-body">
        <div id="search-results" class="row books-row"></div>
        <nav id="pagination" class="p-bottom mt-3">
          <ul class="pagination justify-content-center">
            <li class="page-item disabled">
              <a class="page-link" id="search-page-prev"><i class="fa fa-caret-left"></i></a>
            </li>
            <li class="page-item">
              <a class="page-link" id="search-page-next"><i class="fa fa-caret-right"></i></a>
            </li>
          </ul>
        </nav>
        <div id="add-book-form">
          <i class="fa fa-caret-left btn btn-light"id="back-to-search"></i>
          @using (Html.BeginForm("Create", "Books", FormMethod.Post))
          {
            @Html.HiddenFor(model => model.ImgID)
            @Html.HiddenFor(model => model.Rating)
            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Title, new {required = "required", placeholder="Title", @class="form-control"})
                <label>Title</label>
            </div>
            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Subtitle, new {required = "required", placeholder="Subtitle", @class="form-control"})
                <label>Subtitle</label>
            </div>
            <div class="form-floating mb-3">
              @Html.TextBoxFor(model => model.Authors, new {required = "required", placeholder="Authors", @class="form-control"})
              <label>Authors</label>
            </div>
            <div class="form-floating mb-3">
              @Html.TextAreaFor(model => model.Description, new {placeholder="Description", @class="form-control", rows=10, id="myTextarea" })
              <Label>Description</Label>
            </div>
            <div class="row">
              <div class="col">
                <div class="form-floating mb-3">
                  @Html.TextBoxFor(model => model.Publisher, new {placeholder="Publisher", @class="form-control"})
                  <label>Publisher</label>
                </div>

                <div class="form-floating mb-3">
                  @Html.TextBoxFor(model => model.ISBN_10, new {placeholder="ISBN 10", @class="form-control", type="number"})
                  <label>ISBN 10</label>
                </div>

                <div class="form-floating mb-3">
                  @Html.TextBoxFor(model => model.Categories, new {placeholder="Categories", @class="form-control", type="text"})
                  <label>Categories</label>
                </div>

                <div class="form-floating mb-3">
                  @Html.DropDownListFor(model => model.Status, new SelectList(new string[] {"Not Started", "In Progress", "Finished"}), htmlAttributes: new { @class = "form-select"})
                  <label>Status</label>
                </div>
              </div>
              <div class="col">
                <div class="form-floating mb-3">
                  @Html.TextBoxFor(model => model.PublishedDate, new {placeholder="Published Date", @class="form-control"})
                  <label>Published Date</label>
                </div>

                <div class="form-floating mb-3">
                  @Html.TextBoxFor(model => model.ISBN_13, new {placeholder="ISBN 13", @class="form-control", type="number"})
                  <label>ISBN 13</label>
                </div>

                <div class="form-floating mb-3">
                  @Html.TextBoxFor(model => model.PageCount, new {placeholder="Page Count", @class="form-control", type="number"})
                  <label>Page Count</label>
                </div>

                <div class="form-floating mb-3">
                  @Html.TextBoxFor(model => model.Language, new {placeholder="Language", @class="form-control", type="text"})
                  <label>Language</label>
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-light">Add</button>
          }
        </div>
      </div>
    </div>
  </div>
</div>