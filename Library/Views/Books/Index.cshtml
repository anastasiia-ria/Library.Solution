@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Book>;

<h1>Books</h1>

<button type="button" class="btn btn-light" data-toggle="modal" id="start-search" data-target="#addBookFromApi">+</button>

@if (@Model.Count == 0)
{
  <h3>No books have been added yet!</h3>
} 
<div class="row books-row">
  @foreach (Book book in Model)
  {
    <div class="card" style="width:16rem;">
      <img class="card-img-top" src="https://books.google.com/books/content?id=@(book.ImgID)&printsec=frontcover&img=1&zoom=5" alt="Book thumbnail" height="240px" object-fit="contain">
      <div class="card-body">
        <h5 class="card-title">@book.Title</h5>
        <p class="card-text">@book.Authors</p>
        <a href="#" class="btn btn-light">Details</a>
      </div>
    </div>
  }
</div>
@Html.Partial("AddBook.cshtml")