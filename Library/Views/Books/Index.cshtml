@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Book>;

<h1>Books</h1>

<button type="button" class="btn btn-light" data-toggle="modal" id="start-search" data-target="#addBookFromApi">+</button>

@if (@Model.Count == 0)
{
  <h3>No books have been added yet!</h3>
} 
<div class="row books-row">
  @foreach (Book book in Model)
  {
    <div class="card" style="width: 13rem;">
      <img class="card-img-top" src="..." alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">@book.Title</h5>
        <p class="card-text">@book.Authors</p>
        <a href="#" class="btn btn-primary">Details</a>
      </div>
    </div>
  }
</div>
<div class="modal fade" id="addBookFromApi" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add Book</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <input class="form-control" id="general" type="text"/>
        <p class="error">Your search did not match any books. Please, try different keywords.</p>
        <button class="btn btn-light" type="button" id="search">Search</button>
        <div id="search-results" class="row books-row"></div>
        <div id="add-book-form">
        @using (Html.BeginForm("Create", "Books", FormMethod.Post))
              {
                <div class="form-row">
                  <div class="col">
                    <label>Title</label>
                    @Html.TextBox("Title", "", new {required = "required", placeholder="Title", @class="form-control"})
                  </div>
                  <div class="col">
                    <label>Authors</label>
                    @Html.TextBox("Authors", "", new {required = "required", placeholder="Authors", @class="form-control"})
                  </div>
                </div>
                <div class="form-group">
                  <Label>Description</Label>
                  @Html.TextBox("Description", "", new {placeholder="Description", @class="form-control"})
                </div>
                <div class="form-row">
                  <div class="col">
                    <label>Publisher</label>
                    @Html.TextBox("Publisher", "", new {placeholder="Publisher", @class="form-control"})
                  </div>
                  <div class="col">
                    <label>Published Date</label>
                    @Html.TextBox("PublishedDate", "", new {placeholder="Published Date", @class="form-control"})
                  </div>
                </div>
                <div class="form-row">
                  <div class="col">
                    <label>ISBN 10</label>
                    @Html.TextBox("ISBN_10", "", new {placeholder="ISBN 10", @class="form-control"})
                  </div>
                  <div class="col">
                    <label>ISBN 13</label>
                    @Html.TextBox("ISBN_13", "", new {placeholder="ISBN 13", @class="form-control"})
                  </div>
                </div>
                <div class="form-row">
                  <div class="col">
                    <label>Status</label>
                      <select class="custom-select" name="Status">
                        <option value="Not Started">Not Started</option>
                        <option value="In Progress">In Progress</option>
                        <option value="Finished">Finished</option>
                      </select>
                  </div>
                  <div class="col">
                    <label>Page Count</label>
                    @Html.TextBox("PageCount", "", new {placeholder="Page Count", @class="form-control"})
                  </div>
                </div>
                <button type="submit" class="btn btn-light">Add</button>
              }
      </div>
      </div>
    </div>
  </div>
</div>