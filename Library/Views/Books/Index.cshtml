@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Book>;

<h1>Books</h1>

@if (@Model.Count == 0)
{
  <h3>No books have been added yet!</h3>
} 

@foreach (Book book in Model)
{
  <li>@Html.ActionLink($"{book.Title}", "Details", new { id = book.BookId }) | @book.Shelf.Name</li>
}

@Html.ActionLink("Add book", "Create", null, null, new {@class="btn btn-light"})
