@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Book>;

<h1>Books</h1>
@* <form id="book-search"> *@
  <input class="form-control" id="general" type="text"/>
  <button class="btn btn-light" type="button" id="search">Search</button>
@* </form> *@

@if (@Model.Count == 0)
{
  <h3>No books have been added yet!</h3>
} 
<div class="row books-row">
  @foreach (Book book in Model)
  {
    <div class="card" style="width: 13rem;">
      <img class="card-img-top" src="..." alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">@book.Title</h5>
        <p class="card-text">@book.Authors</p>
        <a href="#" class="btn btn-primary">Details</a>
      </div>
    </div>
  }
</div>

<div id="search-results" class="row books-row">

</div>
<div id="add-book-form">
  @using (Html.BeginForm("Create", "Books", FormMethod.Post))
        {
          <div class="form-group">
            @Html.TextBox("Title", "", new {required = "required", placeholder="Title", @class="form-control", id="title-input"})
          </div>
          <div class="form-group">
            @Html.TextBox("Authors", "", new {required = "required", placeholder="Authors", @class="form-control", id="authors-input"})
          </div>
          <div class="form-group">
            @Html.TextBox("Publisher", "", new {required = "required", placeholder="Publisher", @class="form-control", id="publisher-input"})
          </div>
          <div class="form-group">
            @Html.TextBox("PublishedDate", "", new {required = "required", placeholder="Published Date", @class="form-control", id="published-date-input"})
          </div>
          <button type="submit" class="btn btn-light">Add</button>
        }
</div>
